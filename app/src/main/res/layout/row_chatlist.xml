<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileIv"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:padding="5dp"
                android:src="@drawable/profile"></de.hdodenhof.circleimageview.CircleImageView>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/onlineStatusIv"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"></de.hdodenhof.circleimageview.CircleImageView>

            <TextView
                android:id="@+id/nameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@id/profileIv"
                android:layout_toRightOf="@+id/profileIv"
                android:text="Name"
                android:textColor="@color/black"
                android:textSize="18sp"></TextView>

            <TextView
                android:id="@+id/lassMessageTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nameTv"
                android:layout_marginStart="7dp"
                android:layout_toEndOf="@id/profileIv"
                android:layout_toRightOf="@+id/profileIv"
                android:text="The last message"></TextView>
            <ImageView
                android:id="@+id/blockIv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/ic_unblock"
                ></ImageView>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/profileIv"
                android:background="#EDE7E7"></View>

        </RelativeLayout>

</RelativeLayout>